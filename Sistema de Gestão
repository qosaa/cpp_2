    cout << "Qual é o preço do produto: ";
    cin >> produtos.preco[quantidadeAtual];
}

}

//exibe todos os produtos
void exibirprodutos(const produto produtos, int quantidadeAtual){


}

//calcula valor total do stock
float calcularvalortotal(const produto produtos, int quantidadeAtual){
    total = quantidade * preco[5];
    cout << "O total de tudo é: " << total << endl;



}


int main() {
    int menu;
    cout << "1. Adicionar produto" << endl;
    cout << "2. Exibir produtos" << endl;
    cout << "3. Calcular valor total do stock" << endl;
